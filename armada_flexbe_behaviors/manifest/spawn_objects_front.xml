<?xml version="1.0" encoding="UTF-8"?>

<behavior name="spawn_objects_front">

	<executable package_path="armada_flexbe_behaviors.spawn_objects_front_sm" class="spawn_objects_frontSM" />
	<tagstring>front</tagstring>
	<author>Dan</author>
	<date>Wed Jul 27 2022</date>
	<description>
		Spawn objects in-front of robot
	</description>


	<!-- Contained Behaviors -->
	<contains name="point_cloud_state" />
	<contains name="head_move" />

	<!-- Available Parameters -->
	<params>

		<param type="text" name="table_path" default="/home/csrobot/.gazebo/gazebo_models/table/front_model.sdf" label="table_path" hint="Sets the table_path" />

		<param type="text" name="table" default="table" label="table" hint="Sets the table" />

		<param type="text" name="namespace" default="test" label="namespace" hint="Sets the namespace" />

		<param type="text" name="frame" default="world" label="frame" hint="Sets the frame" />

		<param type="text" name="graspable_item" default="demo_cube" label="graspable_item" hint="Sets the graspable_item" />

		<param type="numeric" name="item_pose_x" default="110" label="item_pose_x" hint="Sets the item_pose_x">
			<min value="-1000" />
			<max value="1000" />
		</param>

		<param type="numeric" name="item_pose_y" default="0" label="item_pose_y" hint="Sets the item_pose_y">
			<min value="-1000" />
			<max value="1000" />
		</param>

		<param type="numeric" name="item_pose_z" default="0" label="item_pose_z" hint="Sets the item_pose_z">
			<min value="0" />
			<max value="1" />
		</param>

		<param type="numeric" name="grab_item_pose_z" default="200" label="grab_item_pose_z" hint="Sets the grab_item_pose_z">
			<min value="-1000" />
			<max value="1000" />
		</param>

		<param type="numeric" name="theta" default="-45" label="theta" hint="Sets the theta">
			<min value="-360" />
			<max value="360" />
		</param>

		<param type="numeric" name="grab_item_pose_x" default="80" label="grab_item_pose_x" hint="Sets the grab_item_pose_x">
			<min value="-1000" />
			<max value="1000" />
		</param>

		<param type="numeric" name="grab_item_pose_y" default="0" label="grab_item_pose_y" hint="Sets the grab_item_pose_y">
			<min value="-1000" />
			<max value="1000" />
		</param>

		<param type="text" name="coke_path" default="/home/csrobot/.gazebo/gazebo_models/coke_can/model.sdf" label="coke_path" hint="Sets the coke_path" />

		<param type="numeric" name="item_pose_w" default="500" label="item_pose_w" hint="Sets the item_pose_w">
			<min value="-1000" />
			<max value="1000" />
		</param>

		<param type="numeric" name="torso_pose_x" default="0.4" label="torso_pose_x" hint="Sets the torso_pose_x">
			<min value="0" />
			<max value="1" />
		</param>

		<param type="text" name="torso_joint_name" default="torso_lift_joint" label="torso_joint_name" hint="Sets the torso_joint_name" />

	</params>


</behavior>